<Window x:Class="BookOrganiser.InternetSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookOrganiser"
        mc:Ignorable="d"
        Title="Internet Search" Height="450" Width="800">
    <Grid>
        <ScrollViewer Margin="0,0,0,40">
            <StackPanel Name="SearchResults" Background="#FFF0F0F0"/>
        </ScrollViewer>

        <Button Name="BtnCancel" Content="Cancel" Height="25" Width="150" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,7"/>

    </Grid>
</Window>
